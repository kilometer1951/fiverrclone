<div class="container">
	<div class="row"><br><br><br><br>
		<div class="col-md-offset-3 col-md-6">
			<form method="POST" action="/search">
				<div class="input-group input-group-lg">
					<input type="text" name="search_input" class="form-control" placeholder="What are you searching for.....?">
					<span class="input-group-btn">
						<input type="submit" class="btn btn-success" value="Find Gigs">
					</span>
				</div>
			</form><br><br>
		</div>
		<div class="section container">
			{{#each content.hits}}
			<div class="col-md-4">
				<div class="gig-card">
					<a href="/service_detail/{{ objectID }}"><img src="{{picture}}" /></a>
					<h4>
						{{title}}
					</h4>
					<h3>
						{{price}}
					</h3>
				</div>
			</div>
			{{/each}}
		</div>
	</div>
</div>